#!/bin/bash

PROG_PATH="/home/clear/HQMS/HQueue/"
PROG_NAME="sync.py"
PYTHON_BIN="/usr/bin/python"

while true
do
	pid=`ps ax | grep -i ${PROG_NAME}| grep -v 'grep' | awk '{print $1}'`
	if [ -n "$pid" ]
	then
		echo "${PROG_NAME}  running!"
	else
		echo "Start ${PROG_NAME}!"
		cd ${PROG_PATH}
		${PYTHON_BIN} ${PROG_NAME} >/var/log/hqms/sync.log 2>&1
	fi
	sleep 3
done
